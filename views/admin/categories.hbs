<h1 class="my-4">Categories</h1>
<a href="/dashboard/categories/new" class="btn btn-primary mb-3">Add New Category</a>
<ul class="list-group">
  {{#each categories}}
    <li class="list-group-item d-flex justify-content-between align-items-center">
      {{this.name}}
      <div>
        <a href="/dashboard/categories/{{this._id}}/edit" class="btn btn-sm btn-warning">Edit</a>
        <button class="btn btn-sm btn-danger" onclick="confirmDelete('/dashboard/categories/{{this._id}}')">Delete</button>
      </div>
    </li>
  {{/each}}
</ul>
<script>
  function confirmDelete(url) {
    if (confirm('Are you sure you want to delete this category?')) {
      fetch(url, { method: 'DELETE' })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            window.location.reload();
          } else {
            alert('Error deleting category');
          }
        });
    }
  }
</script>